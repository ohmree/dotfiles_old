[settings]
; Limit the amount of events sent to lemonbar within a set timeframe:
; - "Allow <throttle_limit> updates within <throttle_ms> of time"
; Default values:
;throttle_limit = 5
;throttle_ms = 50

[bar/bottom]
;monitor = eDP1
bottom = true
dock = false

width = 100%
height = 27

;offset_x = 0
;offset_y = 0

locale = en_US.UTF-8

background = #80002b36
foreground = #839496

spacing = 3
;padding_left = 1
padding_right = 4
module_margin_left = 0
module_margin_right = 6

font-0 = SanFranciscoDisplay-Regular:size=13;0
font-1 = Icons:size=14:style=iconic;-1
font-2 = FontAwesome:size=14;-1
font-3 = Unifont

modules-left = i3
modules-right = cpu memory 

[bar/top]
;monitor = eDP1
bottom = false
dock = false

width = 100%
height = 25

;offset_x = 0
;offset_y = 0

background = #80002b36
foreground = #839496
;linecolor = #839496

spacing = 1
lineheight = 1

;separator = |

locale = en_US.UTF-8

padding_left = 4
padding_right = 1
module_margin_left = 0
module_margin_right = 0

font-0 = SanFranciscoDisplay-Regular:size=13;0
font-1 = MaterialIcons:size=14;-2
font-2 = Termsynu:size=8;-1
font-3 = FontAwesome:size=10;0

modules-left = mpd
modules-right = date volume

